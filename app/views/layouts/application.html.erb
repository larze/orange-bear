<!DOCTYPE html>
<html>
<head>
  <title>NewTowerFm</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="user_nav">
  <% if user_signed_in? %>
    <nav class="admin__menu">
      <ul>
        <li>Logged in as <strong><%= current_user.email %></strong>.</li>
        <li><%= link_to "New Broadcast", new_broadcast_path %></li>
        <li><%= link_to "New Person", new_person_path %></li>
        <li><%= link_to 'My Account', edit_user_registration_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>

      <% else %>
        <li><%= link_to "To the Batcave!", new_user_session_path %></li>
      <% end %>
      </ul>
    </nav>


</div>

<header class="site__header" role="banner">
  <h1><%= link_to "Tower.fm", root_url %></h1>

  <nav class="site__nav" role="navigation">
    <ul>
      <li><%= link_to "Broadcasts", broadcasts_path %></li>
      <li><%= link_to "People", people_path %></li>
    </ul>
  </nav>
</header>



<div class="alerts">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>


<%= yield %>

</body>
</html>
