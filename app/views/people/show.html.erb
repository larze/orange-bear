<p id="notice"><%= notice %></p>

<figure class="alignleft">
  <%= image_tag avatar_url(@person) %>
</figure>

<h2><%= @person.first_name %> <%= @person.last_name %> <% if @person.staff? %><small>Staff</small><% end %></h2>

<%= markdown @person.bio %>

<%= link_to (@person.website) do %>
  <%= @person.first_name %>'s Website
<% end %>

<a href="https://twitter.com/<%= @person.twitter %>" class="twitter-follow-button" data-show-count="true" data-lang="en">Follow <%= @person.twitter %></a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
